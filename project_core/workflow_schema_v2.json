{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Configuration Schema",
  "type": "object",
  "properties": {
    "workflow": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "module": { "type": "string" },
          "class": { "type": "string" },
          "inputs": { "type": "object" },
          "contract": { "type": "string" }
        },
        "required": ["name", "module", "class"]
      }
    }
  },
  "required": ["workflow"]
}